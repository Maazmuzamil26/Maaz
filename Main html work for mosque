<script>
/* DARK MODE */
let dark = localStorage.getItem("dark")==="true";
document.body.classList.toggle("dark",dark);

function toggleDarkMode(){
dark=!dark;
localStorage.setItem("dark",dark);
document.body.classList.toggle("dark",dark);
}

/* LANGUAGE */
let langIndex=0;
const langs=["en","ar","ur"];

function toggleLanguage(){
langIndex=(langIndex+1)%langs.length;
const lang=langs[langIndex];
document.documentElement.lang=lang;
document.body.dir=lang==="en"?"ltr":"rtl";
document.querySelectorAll("[data-en]").forEach(el=>{
el.textContent=el.dataset[lang];
});
}

/* NAV */
function showSection(id,btn){
document.querySelectorAll("main section").forEach(s=>s.style.display="none");
document.getElementById(id).style.display="block";
document.querySelectorAll(".nav-bar button").forEach(b=>b.classList.remove("active"));
btn.classList.add("active");
}

/* MODAL */
function openModal(){registerModal.style.display="flex"}
function closeModal(){
registerModal.style.display="none";
registerForm.reset();
registerForm.style.display="block";
thankYou.style.display="none";
}

/* FORM */
registerForm.addEventListener("submit",e=>{
e.preventDefault();
fetch("https://formspree.io/f/xrelqrrp",{
method:"POST",
body:new FormData(registerForm),
headers:{Accept:"application/json"}
}).then(r=>{
if(r.ok){
registerForm.style.display="none";
thankYou.style.display="block";
}else{
alert("Submission failed. Please try again.");
}
});
});

/* PRAYER TIMES */
const LAT=51.5074, LNG=-0.1278, METHOD=2;

async function loadPrayerTimes(){
const today=new Date();
prayerDate.textContent=today.toLocaleDateString(undefined,{weekday:'long',day:'numeric',month:'long',year:'numeric'});

try{
const res=await fetch(`https://api.aladhan.com/v1/timings?latitude=${LAT}&longitude=${LNG}&method=${METHOD}`);
const t=(await res.json()).data.timings;

const prayers=[["Fajr",t.Fajr],["Dhuhr",t.Dhuhr],["Asr",t.Asr],["Maghrib",t.Maghrib],["Isha",t.Isha]];

prayerCards.innerHTML=prayers.map(p=>`
<div class="card">
<h3>${p[0]}</h3>
<div class="prayer-time">${p[1]}</div>
</div>`).join("");

}catch{
prayerCards.innerHTML="<div class='card'>Unable to load prayer times</div>";
}
}

loadPrayerTimes();

/* refresh after midnight */
setTimeout(()=>location.reload(),86400000-(Date.now()%86400000));
</script>

